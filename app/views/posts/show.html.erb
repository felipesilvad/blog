<div class="container"> 
	<p id="notice"><%= notice %></p>

	<p>
		<h1 class="item"><%= @post.title %></h1>
	</p>

	<p>
	<%= @post.body %>
	</p>
	<table>
		<tr>
		<td class="item">by: <%= @post.user.email %></td>
		<% if @post.user == current_user %>
			<td class="item"><%= link_to 'Edit', edit_post_path(@post) %></td>
			<td class="item"><%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
			<td class="item"><%= link_to 'Back', posts_path %></td>
		</tr>
	</table>
	

	<br></br>

	<h2>Comments</h2>
		<div id="comments">
			<%# Expands to render partial: 'comments/comment', collection: @post.comments %>
			<%= render @post.comments %>
		</div>
		
		<% if user_signed_in? %>
			<%= render 'comments/new', post: @post %>
		<% end %>

</div>
